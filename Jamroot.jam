import os ;

# Note: we require BOOST_ROOT be defined with a valid path
BOOST_ROOT = [ os.environ BOOST_ROOT ] ;
ECHO Boost include path is: $(BOOST_ROOT) ;

project safefloat
    : usage-requirements <include>include
    : requirements
        <include>$(BOOST_ROOT)
	<cxxflags>-pedantic
        <cxxflags>-std=c++17
    : build-dir ./build
;

build-project example ;
build-project test ;
build-project doc ;
